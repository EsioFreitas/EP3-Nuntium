<div class="container">
<%- model_class = Tag -%>


<h1 class="font-weight-bold title text-center "><%= @tag.name %></h1>

<div class="content-cards">
    <% @tag.articles.each do |article| %>
      <%= link_to article_path(article) do %>
      <div class="card bg-dark text-white" id = "ArtigosPublicado">
      <%= image_tag article.photo.url(:medium), id: "ImagemArtigoPublicado" %>
      <div class="card-img-overlay" id ="ArticleOverlay">
          <h5 class="card-title"> <%= article.title %> </h5>
          <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        </div>
        
      </div>
      <% end %>
      
      <% end %>
  </div>
 

      
      




<%= link_to t('.back', :default => t("helpers.links.back")),
              tags_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tag_path(@tag), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tag_path(@tag),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
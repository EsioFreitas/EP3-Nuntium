<%- model_class = Tag -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @tag.name %></dd>
</dl>







<div class="content-cards">
    <% @tag.articles.each do |article| %>
      <%= link_to article_path(article) do %>
      <div class="card bg-dark text-white" id = "ArtigoPublicado">
        <%= image_tag "foto.jpg", id: "ImagemArtigoPublicado" %>
        <div class="card-img-overlay" id ="ArticleOverlay">
          <h5 class="card-title"> <%= article.title %> </h5>
          <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        </div>
        
      </div>
      <% end %>
      <%= link_to t('.show', :default => t("helpers.links.show")),
        article_path(article), :class => 'btn btn-default btn-xs' %>
      <% end %>
  </div>
 

      
      




<%= link_to t('.back', :default => t("helpers.links.back")),
              tags_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tag_path(@tag), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tag_path(@tag),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
